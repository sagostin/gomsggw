# PostgreSQL settings
POSTGRES_USER=smsgw
POSTGRES_PASSWORD=
POSTGRES_DB=smsgw
POSTGRES_HOST_AUTH_METHOD=scram-sha-256
POSTGRES_TIMEZONE=America/Vancouver

PPROF_LISTEN=0.0.0.0:42666

TRANSCODE_TEMP_PATH=./transcode

# RabbitMQ settings
RABBITMQ_DEFAULT_USER=admin
RABBITMQ_DEFAULT_PASS=
RABBITMQ_VHOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672
RABBITMQ_PROMETHEUS_PORT=15692

AMQP_SERVER_URL=amqp://admin:nimda@localhost:5672/rabbitmq

PROMETHEUS_LISTEN=:2550
PROMETHEUS_PATH=/metrics

DEBUG=true

HAPROXY_PROXY_PROTOCOL=false

TELNYX_ENABLE=true
TELNYX_API_KEY=

# Twilio Configuration
TWILIO_ENABLE=true
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=

# Loki Configuration
LOKI_URL=http://localhost:3100/loki/api/v1/push
LOKI_USERNAME=
LOKI_PASSWORD=

API_KEY=

# Encryption Key (REQUIRED - 32 character key for AES-256 credential encryption)
ENCRYPTION_KEY=

# Server Configuration
WEB_LISTEN=0.0.0.0:3000
SERVER_ID=gateway1
# Used for media URLs to carriers for MMS, especially if you have a proxy or something.
SERVER_ADDRESS=http://1.1.1.1:3000
MM4_ORIGINATOR_SYSTEM=system@1.1.1.1
MM4_MSG_ID_HOST=1.1.1.1
MM4_LISTEN=0.0.0.0:2566
MM4_DEBUG=false

# SMPP Server
SMPP_LISTEN=0.0.0.0:9550

# Global Retry Configuration
WEBHOOK_RETRIES=3
WEBHOOK_TIMEOUT_SECS=10
WEBHOOK_RETRY_DELAY_SECS=5
SMPP_RETRIES=3
SMPP_TIMEOUT_SECS=30
MM4_RETRIES=3
MM4_TIMEOUT_SECS=60
NOTIFY_SENDER_ON_FAILURE=true

# Backup Configuration
BACKUP_LOCAL_DIR=/var/backups/gomsggw
BACKUP_RETENTION_DAYS=7
BACKUP_SCHEDULE=0 2 * * *

# Backup FTP (optional - leave empty to disable)
BACKUP_FTP_HOST=
BACKUP_FTP_PORT=21
BACKUP_FTP_USER=
BACKUP_FTP_PASSWORD=
BACKUP_FTP_DIR=/gomsggw
